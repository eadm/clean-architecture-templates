<idea-plugin>
    <id>ru.hh.plugins.Geminio</id>
    <name>Geminio</name>
    <vendor email="p.strelchenko@hh.ru" url="https://hh.ru">hh.ru</vendor>

    <description><![CDATA[
    Plugin for generating code from templates.
    ]]></description>

    <version>1.1.3</version>
    <idea-version since-build="201.8743.12"/>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>org.jetbrains.android</depends>
    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="ru.hh.plugins.geminio.services.GeminioStartupActivity"/>

        <!-- region Plugin config -->
        <projectService serviceImplementation="ru.hh.plugins.geminio.config.editor.GeminioPluginSettings"/>
        <projectConfigurable
                groupId="appearance"
                instance="ru.hh.plugins.geminio.config.editor.GeminioPluginSettingsSearchableConfigurable"/>
        <!-- endregion -->

        <projectService
                serviceImplementation="ru.hh.plugins.geminio.services.templates.GeminioRecipeExecutorFactoryService"/>
        <projectService
                serviceImplementation="ru.hh.plugins.geminio.services.templates.ConfigureTemplateParametersStepFactory"/>
        <projectService serviceImplementation="ru.hh.plugins.geminio.services.MarkdownParserService"/>
    </extensions>

    <actions>
        <!-- Templates -->
        <group id="ru.hh.plugins.geminio.New.HHTemplatesGroup" text="HH Templates" popup="true">
            <add-to-group group-id="NewGroup" anchor="first"/>
        </group>
        <group id="ru.hh.plugins.geminio.Generate.HHTemplatesGroup" text="From HH Templates" popup="true">
            <separator/>
            <add-to-group group-id="GenerateGroup" anchor="last"/>
        </group>

        <!-- Modules templates -->
        <group id="ru.hh.plugins.geminio.New.HHModulesTemplatesGroup" text="HH Templates" popup="true">
            <add-to-group group-id="NewGroup" anchor="first"/>
        </group>
        <group id="ru.hh.plugins.geminio.Generate.HHModulesTemplatesGroup" text="From HH Templates" popup="true">
            <separator/>
            <add-to-group group-id="GenerateGroup" anchor="last"/>
        </group>
    </actions>

</idea-plugin>